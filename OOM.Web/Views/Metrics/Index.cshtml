@model IEnumerable<OOM.Model.Metric>

@{
    ViewBag.Title = "List of metrics";
}

<div class="page-header">
    <div class="row">
        <div class="col-lg-12">
            <h1>
                Metrics
                <div class="pull-right">
                    <a href="@Url.Action("Create New", "Create")" class="btn btn-primary">
                        <i class="icon-star icon-white"></i> Create
                    </a>
                </div>
            </h1>
            <br />
            <div class="table-responsive">
                <table class="table table-hover table-bordered">
                    <tr>
                        <th>
                            @Html.DisplayNameFor(m => m.Name)
                        </th>
                        <th>
                            @Html.DisplayNameFor(m => m.Expression)
                        </th>
                        <th>
                            @Html.DisplayNameFor(m => m.TargetType)
                        </th>
                        <th></th>
                    </tr>

                    @foreach (var metric in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(m => metric.Name)
                            </td>
                            <td>
                                @Html.DisplayFor(m => metric.Expression)
                            </td>
                            <td>
                                @Html.DisplayFor(m => metric.TargetType)
                            </td>
                            <td>
                                @Html.ActionLink("Edit", "Edit", new { id = metric.Id }) |
                                @Html.ActionLink("Details", "Details", new { id = metric.Id }) |
                                @Html.ActionLink("Delete", "Delete", new { id = metric.Id })
                            </td>
                        </tr>
                    }
                </table>
            </div>
        </div>
    </div>
</div>