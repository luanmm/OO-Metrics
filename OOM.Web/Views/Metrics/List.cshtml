@model IEnumerable<OOM.Model.Metric>

@{
    ViewBag.Title = "List of metrics";
}

<ul class="breadcrumb">
    <li>@Html.ActionLink("Home", "Index", "Home")</li>
    <li class="active">Metrics</li>
</ul>
<div class="page-header">
    <div class="row">
        <div class="col-lg-12">
            <h1>
                Metrics
                <div class="pull-right">
                    <a href="@Url.Action("Create")" class="btn btn-primary">
                        <i class="icon-star icon-white"></i> Create new
                    </a>
                </div>
            </h1>
            <br />
            <div class="table-responsive">
                <table class="table table-hover table-bordered">
                    <tr>
                        <th>
                            @Html.DisplayNameFor(m => m.Name)
                        </th>
                        <th>
                            @Html.DisplayNameFor(m => m.Expression)
                        </th>
                        <th>
                            @Html.DisplayNameFor(m => m.TargetType)
                        </th>
                        <th></th>
                    </tr>

                    @foreach (var metric in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(m => metric.Name)
                            </td>
                            <td>
                                <span class="math-expression">
                                    @Html.DisplayFor(m => metric.Expression)
                                </span>
                            </td>
                            <td>
                                @Html.DisplayFor(m => metric.TargetType)
                            </td>
                            <td style="text-align: center;">
                                <a href="@Url.Action("Edit", new { id = metric.Id })" class="btn btn-primary btn-xs" data-toggle="tooltip" title="Edit" role="button">
                                    <span class="fa fa-pencil" aria-hidden="true"></span>
                                </a>
                                <a href="@Url.Action("Details", new { id = metric.Id })" class="btn btn-primary btn-xs" data-toggle="tooltip" title="Details" role="button">
                                    <span class="fa fa-eye" aria-hidden="true"></span>
                                </a>
                                <a href="@Url.Action("Delete", new { id = metric.Id })" class="btn btn-danger btn-xs" data-toggle="tooltip" title="Delete" role="button">
                                    <span class="fa fa-trash" aria-hidden="true"></span>
                                </a>
                            </td>
                        </tr>
                    }
                </table>
            </div>
        </div>
    </div>
</div>

@section scripts {
    @Scripts.Render("~/bundles/mathjax")
    <script>
        $('.math-expression').each(function () {
            var id = 'expression' + Math.floor(Math.random() * 26) + Date.now();
            var $this = $(this);

            $this.attr('id', id).hide().html('`' + $this.html() + '`');

            MathJax.Hub.Queue(
                ["Typeset", MathJax.Hub, id],
                function () {
                    $this.show();
                }
            );
        });

        $('[data-toggle="tooltip"]').tooltip();
    </script>
}