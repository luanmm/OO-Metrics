<!DOCTYPE html>
<html lang="pt-br" ng-app="oomApp">
<head>
    <meta charset="utf-8">
    <title>OO-Metrics</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <link rel="icon" type="image/png" href="favicon.png">
    @Styles.Render("~/Content/css")
