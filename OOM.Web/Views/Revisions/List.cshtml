@model IEnumerable<OOM.Model.Revision>

@{
    ViewBag.Title = "List of revisions";
}

<div class="page-header">
    <div class="row">
        <div class="col-lg-12">
            <h1>
                List of revisions
            </h1>
            <br />
            <div class="table-responsive">
                <table class="table table-hover table-bordered">
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.RID)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Message)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Author)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.CreatedAt)
                        </th>
                        <th></th>
                    </tr>

                    @foreach (var revision in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(m => revision.RID)
                            </td>
                            <td>
                                @Html.DisplayFor(m => revision.Message)
                            </td>
                            <td>
                                @Html.DisplayFor(m => revision.Author)
                            </td>
                            <td>
                                @Html.DisplayFor(m => revision.CreatedAt)
                            </td>
                            <td>
                                @Html.ActionLink("Details", "Details", new { id = revision.Id })
                            </td>
                        </tr>
                    }
                </table>
            </div>
        </div>
    </div>
</div>
