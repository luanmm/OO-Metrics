@model IEnumerable<OOM.Model.Revision>

@{
    ViewBag.Title = "List of revisions";
    
    var project = Model.FirstOrDefault().Project;
}

<ul class="breadcrumb">
    <li>@Html.ActionLink("Home", "Index", "Home")</li>
    <li>@Html.ActionLink("Projects", "List", "Projects")</li>
    <li>@Html.ActionLink(project.Name, "Details", "Projects", new { id = project.Id }, null)</li>
    <li class="active">Revisions</li>
</ul>
<div class="page-header">
    <div class="row">
        <div class="col-lg-12">
            <h1>
                List of revisions
            </h1>
            <br />
            <div class="table-responsive">
                <table class="table table-hover table-bordered">
                    <tr>
                        <th>
                            #
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.RID)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Message)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Author)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.CreatedAt)
                        </th>
                        <th></th>
                    </tr>

                    @foreach (var revision in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(m => revision.Number)
                            </td>
                            <td>
                                @Html.DisplayFor(m => revision.RID)
                            </td>
                            <td>
                                @Html.DisplayFor(m => revision.Message)
                            </td>
                            <td>
                                @Html.DisplayFor(m => revision.Author)
                            </td>
                            <td>
                                @Html.DisplayFor(m => revision.CreatedAt)
                            </td>
                            <td style="text-align: center;">
                                <a href="@Url.Action("Details", new { id = revision.Id })" class="btn btn-primary btn-xs" data-toggle="tooltip" title="Details" role="button">
                                    <span class="fa fa-eye" aria-hidden="true"></span>
                                </a>
                            </td>
                        </tr>
                    }
                </table>
            </div>
        </div>
    </div>
</div>

@section scripts {
    <script>
        $(function () {
            $('[data-toggle="tooltip"]').tooltip();
        });
    </script>
}