<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - OO-Metrics</title>

    <link rel="icon" type="image/png" href="favicon.png">
    @Styles.Render("~/Content/css")
    <!--[if lt IE 9]>
        @Scripts.Render("~/bundles/ie-fix")
    <![endif]-->
</head>
<body>
    <div class="navbar navbar-default navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button class="navbar-toggle" type="button" data-toggle="collapse" data-target="#navbar" ng-init="isCollapsed = true" ng-click="isCollapsed = !isCollapsed">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a href="@Url.Action("Index", "Home")" class="navbar-brand"><i class="fa fa-line-chart"></i> OO-Metrics</a>
                @*<a href="/#/" class="navbar-brand"><i class="fa fa-line-chart"></i> OO-Metrics</a>*@
            </div>
            <div id="navbar" class="navbar-collapse collapse" collapse="isCollapsed">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Projects", "Index", "Projects")</li>
                    <li>@Html.ActionLink("Metrics", "Index", "Metrics")</li>
                </ul>
            </div>
        </div>
    </div>

    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - OO-Metrics</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
